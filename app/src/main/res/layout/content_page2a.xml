<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.david.vrapppractice.Page2a"
    tools:showIn="@layout/activity_page2a">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="124dp"
            android:text="Is the job Minor Roadway Works during periods of low risk?"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/Yes3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="27dp"
            android:layout_marginTop="73dp"
            android:text="Yes"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/No2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Yes3"
            android:layout_alignBottom="@+id/Yes3"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:text="No" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
